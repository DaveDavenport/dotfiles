#!/usr/bin/env bash

last_log() {
  last --time-format full -2 $USER | sed -n 2p | awk 'BEGIN{FS=" "} {print "\033[31m  Welcome back Nuno! Last login:",$3,$4,$5,$6,"on",$2}'
}

C='\e[0m' #clear
R='\e[38;5;01m'
Y='\e[38;5;03m'
W='\e[38;5;11m'

last_log
echo -e '                       '$R'     (    , )       (.   )  (   '\'',    )   )     (      '$C
echo -e '   ______________      '$R'      .'\'' ) ( . )    ,  ( ,     )   ( .     . ) .'\'' ) )  '$C
echo -e '  ||            ||     '$R'   ). , ( .   (  ) ( , '\'')  .'\'' (  ,    )     (  , Â´ (  )'$C
echo -e '  ||            ||     '$R'  (_)  . ), ) _) _,'\'')  (, ) '\''. )  ,. ('\'' ) ) _)  . )_) _'$C
echo -e '  ||            ||     '$R'  @@@  @@@  @@@@@@@    @@@@@@   @@@  @@@  @@@  @@@@@@@ '$C
echo -e '  ||            ||     '$R'  @@@@ @@@  @@@@@@@@  @@@@@@@@  @@@  @@@  @@@  @@@@@@@@'$C
echo -e '  ||____________||       '$R'@@'$Y'!'$R'@'$Y'!'$R'@@@  @@'$Y'!'$R'  @@@  @@'$Y'!'$R'  @@@  @@'$Y'!'$R'  @@@  @@'$Y'!'$R'  @@'$Y'!'$R'  @@@'$C
echo -e '  |______________|       '$Y'!'$R'@'$Y'!!'$R'@'$Y'!'$R'@'$Y'!  !'$R'@'$Y'!'$R'  @'$Y'!'$R'@  '$Y'!'$R'@'$Y'!'$R'  @'$Y'!'$R'@  '$Y'!'$R'@'$Y'!'$R'  @'$Y'!'$R'@  '$Y'!'$R'@'$Y'!  !'$R'@'$Y'!'$R'  @'$Y'!'$R'@'$C
echo -e '   \\\\############\\\\      '$R'@'$Y'!'$R'@ '$Y'!!'$R'@'$Y'!'$R'  @'$Y'!'$R'@  '$Y'!'$R'@'$Y'!'$R'  @'$Y'!'$R'@'$Y'!'$R'@'$Y'!'$R'@'$Y'!'$R'  @'$Y'!'$R'@  '$Y'!'$R'@'$Y'!  !!'$R'@  @'$Y'!'$R'@  '$Y'!'$R'@'$Y'!'$C
echo -e '    \\\\############\\\\     '$W':'$Y'!'$W':  '$Y'!'$W':'$Y'!'$W'  :'$Y'!'$W':  '$Y'!'$W':'$Y'!'$W'  :'$Y'!'$W':  '$Y'!'$W':'$Y'!'$W'   ::'$Y'!!'$W':'$Y'!'$W'   :'$Y'!'$W':  :'$Y'!'$W':  '$Y'!'$W':'$Y'!'$C
echo -e '     \\      ____    \\     '$W'::   ::   :::: ::  ::   :::    ::::     ::   :::: ::'$C
echo -e '      \\_____\\___\\____\\   '$W'::    :   :: :  :    :   : :     :      :    :: :  : '$C'\n'
